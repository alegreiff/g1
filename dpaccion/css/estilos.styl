nav
  position fixed
  background rgba(60,240,240,.6)
  width 100%
  bottom 0
  left 0

nav ul
  list-style none

nav li  
  display: inline-block

nav li a  
  
  color: white
  padding 0.5em 1em
  text-decoration none
  border-radius 0.5em
  display inline-block
  margin 0 1em 0 0
  transition all 0.6s ease

nav li a:hover
  background white
  color black
  transform scale(1.2) rotate(5deg);

