colorbase=rgba(255,255,255,0.5);
sombra = rgba(130,150,220,0.7) 5px 5px 10px;
body {
  text-align: center;
  background: #272822;
  color: #eee;
  font-family: 'Open Sans', sans-serif;
  font-size: 16px;
}

h1{
  color: rgba(255,255,255,1);
  
}
#encabezado{
  background: colorbase;
  border-radius: 0.5em;
  box-shadow: sombra;
  
  margin: 0.5em;
  padding: 1em 1em 0;
  transition: all 1s ease;
  
  
}

#introduccion{
  background: colorbase;
  border-radius: 0.5em;
  box-shadow: sombra;
  
  margin: 0.5em 0.5em 6em 0.5em;
  padding: 1em 1em 0;
  text-align justify
  transition: all 1s ease;
  /*vertical-align: top;*/
  
}
nav
  position fixed
  background rgba(60,240,240,.6)
  width 100%
  bottom 0
  left 0

nav ul
  list-style none

nav li  
  display: inline-block

nav li a  
  
  rgba(130,150,220,0.7)
  border-radius 0.5em
  display inline-block
  font-size 0.8em;
  margin 0 1em 0 0
  padding 0.5em 1em
  text-decoration none


nav li a:hover
  background:rgba(255,255,255,1) url(pdf.png) center left no-repeat;
  background-size: 12px 
  
  //color black


a[href$='.pdf'] {

  background:rgba(255,255,255,0.8) url(pdf.png) center left no-repeat;
  background-size: 12px 
  padding-left:25px;
  line-height:15px;
}  